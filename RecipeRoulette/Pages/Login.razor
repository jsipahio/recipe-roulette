@page "/login"
@inject NavigationManager _nav

<PageTitle>Login</PageTitle>
<div class="row" id="userPage">
    <div class='col-2 mx-auto'>
        <form method = "post" @onsubmit=LoginUser @formname="loginForm">    
            <h3>Login</h3>
            <div class="col-2 mb-3">
                <label>Email:</label>
                <InputText type = "email" @bind-Value=_user.Email></InputText>
            </div>
            <div class = "col-2 mb-3">
                <label>Password:</label>
                <InputText type="password" @bind-Value=_user.Password></InputText>
            </div>
            <div class="mb-2" id="errorMessage">@message</div>
            <div class="mb-2">
                <button type="submit" class="btn btn-danger" @onclick=LoginUser>Login</button>
                <button class="btn btn-light" @onclick="@(()=>_nav.NavigateTo("/signup"))">Sign up</button>
            </div>
            <div>
                <a href = "">Forgot your password?</a>
            </div>
        </form>
    </div>
</div>

